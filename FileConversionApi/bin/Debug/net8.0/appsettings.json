{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  // Server Configuration
  "Server": {
    "Port": 3000,
    "Host": "localhost",
    "Environment": "Development"
  },

  // File Handling Configuration
  "FileHandling": {
    "UploadLimit": "50mb",
    "MaxFileSize": 52428800,
    "TempDirectory": "./temp",
    "OutputDirectory": "./temp/converted"
  },

  // Rate Limiting Configuration
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 30
      }
    ]
  },

  // CORS Configuration
  "Cors": {
    "AllowAnyOrigin": true,
    "AllowAnyMethod": true,
    "AllowAnyHeader": true,
    "AllowCredentials": true
  },

  // Security Headers Configuration
  "SecurityHeaders": {
    "ContentSecurityPolicy": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self'",
    "Hsts": {
      "Enabled": false,
      "MaxAge": 31536000,
      "IncludeSubDomains": false,
      "Preload": false
    },
    "NoSniff": true,
    "ReferrerPolicy": "strict-origin-when-cross-origin"
  },

  // Logging Configuration
  "CustomLogging": {
    "Level": "Information",
    "IncludeScopes": false,
    "FilePath": "./logs/file-conversion-api-.log",
    "RollingInterval": "Day",
    "RetainedFileCountLimit": 7
  },

  // Concurrency Control
  "Concurrency": {
    "MaxConcurrentConversions": 2,
    "MaxQueueSize": 10
  },

  // Conversion Timeouts (in milliseconds)
  "Timeouts": {
    "DocumentConversion": 60000,
    "ImageConversion": 30000,
    "HttpClientTimeout": 30000
  },

  // Network Configuration
  "Network": {
    "TrustProxy": false,
    "KeepAlive": true,
    "KeepAliveTimeout": 65000
  },

  // Health Check Configuration
  "HealthChecks": {
    "Enabled": true,
    "Path": "/health",
    "DetailedPath": "/health/detailed",
    "Timeout": 5000,
    "IncludeSystemInfo": false
  },

  // LibreOffice Configuration
  "LibreOffice": {
    "SdkPath": "C:\\Program Files\\LibreOfficeSDK",
    "ExecutablePath": "",
    "ForceBundled": true,
    "ConversionQuality": "high"
  },

  // SSL Configuration
  "SSL": {
    "Enabled": false,
    "CertificatePath": "",
    "CertificatePassword": "",
    "AcceptSelfSigned": true
  },

  // IP Whitelisting
  "Security": {
    "IPWhitelist": [],
    "EnableAdvancedSecurity": true
  },

  // Preprocessing Configuration
  "Preprocessing": {
    "EnableDocxPreprocessing": true,
    "NormalizeFonts": true,
    "ConvertColors": true
  }
}
